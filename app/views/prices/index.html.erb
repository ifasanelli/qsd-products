<h1 class="ls-title-intro ls-ico-list2">
  <%= Price.model_name.human(count: 2) %>
</h1>


<div id="cars" class="ls-tab-content ls-active">
  <table class="ls-table ls-table-striped ls-bg-header">
    <thead>
      <tr>
        <th>
          <%= Price.human_attribute_name('plan_price') %>
        </th>
        <th class="hidden-xs">
          <%= Price.human_attribute_name('plan_id') %>
        </th>
        <th>
          <%= Price.human_attribute_name('periodicity_id') %>
        </th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @prices.each do |price| %>
      <tr>
        <td><%= "#{format("R$ %.2f", price.plan_price)}" %></td>
        <td class="hidden-xs"><%= price.plan.name %></td>
        <td><%= price.periodicity.name %></td>
        <td id=<%= "price-#{price.id}" %>>
          <%= link_to t(:edit, scope: [:application_view, :buttons]),
                        edit_price_path(price), class: "ls-btn" %>
          <%= link_to t(:delete, scope: [:application_view, :buttons]),
                        price, class: "ls-btn-primary-danger
          ls-ico-remove", method: :delete, data: {confirm: "#{t(:confirm?,
                             scope: [:application_view, :messages])}"} %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to t(:register, scope: [:price_view, :buttons]), new_price_path,
              class: 'ls-btn-primary' %>

</div>


<br>
