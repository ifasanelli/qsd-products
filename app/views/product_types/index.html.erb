<h1 class="ls-title-intro ls-ico-bukets">
  <%= ProductType.model_name.human(count: 2) %>
</h1>
<strong><p class="ls-alert-danger"><%= alert %></p></strong>
<strong><p class="ls-alert-success"><%= notice %></p></strong>

<% if @product_types.empty? %>
  Lista Vazia
<% end %>
<div class="ls-box">
  <header class="ls-info-header">
    <h6 class="ls-title-4">Lista de Tipos de Produtos </h6>
  </header>
  <% @product_types.each do |product_type| %>
    <div class="ls-list">
      <header class="ls-list-header">
        <div class="ls-list-title col-md-9">
          <%= link_to product_type.name, edit_product_type_path(product_type) %>
        </div>
        <div class="col-md-3 ls-txt-right">
          <%= link_to 'Alterar', edit_product_type_path(product_type), class:"ls-btn-primary" %>
        </div>
      </header>
      <div class="ls-list-content ">
        <div class="col-xs-12 col-md-6">
          <span class="ls-list-label"><%= ProductType.human_attribute_name('description') %></span>
          <strong><%= product_type.description %></strong>
        </div>
      </div>
      <div class="ls-list-content ">
        <div class="col-xs-12 col-md-6">
          <span class="ls-list-label"><%= ProductType.human_attribute_name('product_key') %></span>
          <strong><%= product_type.product_key %></strong>
        </div>
      </div>
    </div>
  <% end %>
</div>
<h3> Cadastrar Tipo de Produto</h3><br \>
<div class="ls-box ls-box-gray">
  <%= render partial: 'form', locals: { product_type: @product_type } %>
</div>
