<h1 class="ls-title-intro ls-ico-origins">
  <%= Plan.model_name.human(count: 2) %>
</h1>
<strong><p class="ls-alert-danger"><%= alert %></p></strong>
<strong><p class="ls-alert-success"><%= notice %></p></strong>

<% if @plans.empty? %>
  Lista Vazia
<% end %>
<div class="ls-box">
  <header class="ls-info-header">
    <h6 class="ls-title-4">Lista de Planos</h6>
  </header>
  <% @plans.each do |plan| %>
    <div class="ls-list">
      <header class="ls-list-header">
        <div class="ls-list-title col-md-9">
          <%= link_to plan.name, edit_plan_path(plan) %>
        </div>
        <div class="col-md-3 ls-txt-right">
          <%= link_to 'Alterar', edit_plan_path(plan), class:"ls-btn-primary" %>
        </div>
      </header>
      <div class="ls-list-content ">
        <div class="col-xs-12 col-md-6">
          <span class="ls-list-label"><%= ProductType.model_name.human %></span>
          <strong><%= link_to plan.product_type.name, product_types_path %></strong>
        </div>
      </div>
      <div class="ls-list-content ">
        <div class="col-xs-12 col-md-6">
          <span class="ls-list-label"><%= Plan.human_attribute_name('description') %></span>
          <strong><%= plan.description %></strong>
        </div>
      </div>
      <div class="ls-list-content ">
        <div class="col-xs-12 col-md-6">
          <span class="ls-list-label"><%= Plan.human_attribute_name('details') %></span>
          <strong><%= plan.details %></strong>
        </div>
      </div>
      <div class="ls-list-content ">
        <div class="col-xs-12 col-md-6">
          <span class="ls-list-label"><%= Plan.human_attribute_name('status') %>:
          <% if plan.status == 'available' %>
            <font color='black'><b><%= t('status.available') %></b></font>
          </span>
          <strong>
              <p>
                <%= link_to 'Alterar status', unavailable_plan_path(plan),
                                              method: :post, class:"ls-btn-primary" %>
              </p>
          </strong>
          <% else %>
            <font color='black'><b><%= t('status.unavailable') %></b></font>
          </span>
          <strong>
              <p>
                <%= link_to 'Alterar status', available_plan_path(plan),
                                              method: :post, class:"ls-btn-primary" %>
              </p>
          </strong>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
<h3> Cadastrar Plano </h3><br \>
<div class="ls-box ls-box-gray">
  <%= render partial: 'form', locals: { plan: @plan } %>
</div>
