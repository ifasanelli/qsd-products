
<% if @periodicity.errors.any? %>
  <% @periodicity.errors.full_messages do |msg| %>
     <%= msg %>
  <% end %>
<% end %>

<%= form_with model: @periodicity, class:"ls-form ls-form-inline row", locals: true do |form| %>
  <label class="ls-label col-md-5">
    <b class="ls-label-text">Nome</b>
    <%= form.text_field :name, placeholder:"Nome do Período"  %>
 
  </label>
  <label class="ls-label col-md-4">
    <b class="ls-label-text">Período</b>
        <%= form.text_field :period, placeholder:"Período em meses" %>
  </label>
  <div class="ls-actions-btn">
  <%= form.submit "Salvar" , class: 'ls-btn'%>
  </div>
<% end %>

  <hr>
  <div class="ls-box">
  <header class="ls-info-header">
    <h6 class="ls-title-4">Lista de Periodicidades</h6>
  </header>

  <% @periodicities.each do |periodicity| %>
  <div class="ls-list">
    <header class="ls-list-header">
      <div class="ls-list-title col-md-9">
        <%= link_to periodicity.name, edit_periodicity_path(periodicity) %>
      </div>
      <div class="col-md-3 ls-txt-right">
        <%= link_to 'Alterar', edit_periodicity_path(periodicity), class:"ls-btn-primary" %>
      </div>
    </header>
    <div class="ls-list-content ">
      <div class="col-xs-12 col-md-6">
        <span class="ls-list-label">Quantidade de Meses</span>
        <strong><%= periodicity.period %></strong>
      </div>
    </div>
  </div>
  <% end %>
</div>
 
