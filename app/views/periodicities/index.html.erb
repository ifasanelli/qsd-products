<h1 class="ls-title-intro ls-ico-month">
  <%= Periodicity.model_name.human(count: 2) %>
</h1>
<strong><p class="ls-alert-danger"><%= alert %></p></strong>
<strong><p class="ls-alert-success"><%= notice %></p></strong>

<% if @periodicities.empty? %>
  Lista Vazia
<% end %>
<h3> Cadastrar Periodicidade </h3><br \>
<div class="ls-box ls-box-gray">
  <%= render partial: 'form' %>
</div>
<div class="ls-box">
  <header class="ls-info-header">
    <h6 class="ls-title-4">Lista de Periodicidade</h6>
  </header>
  <% @periodicities.each do |periodicity| %>
    <div class="ls-list">
      <header class="ls-list-header">
        <div class="ls-list-title col-md-9">
          <%= link_to periodicity.name, edit_periodicity_path(periodicity) %>
        </div>
        <div class="col-md-3 ls-txt-right">
          <%= link_to 'Alterar', edit_periodicity_path(periodicity), class:"ls-btn-primary" %>
        </div>
      </header>
      <div class="ls-list-content ">
        <div class="col-xs-12 col-md-6">
          <span class="ls-list-label">Quantidade de Meses</span>
          <strong><%= periodicity.period %></strong>
        </div>
      </div>
    </div>
  <% end %>
</div>
